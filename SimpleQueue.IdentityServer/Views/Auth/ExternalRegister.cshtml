@model SimpleQueue.IdentityServer.Controllers.ExternalRegisterViewModel

<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="~/css/user-registration.css" />
</head>


<div class="form-back">      
    <form asp-controller="Auth" asp-action="ExternalRegister" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div>
            <div class="form-wrapper">
                <label class="label" asp-for="Username">User Name</label>
                <input type="text" asp-for="Username" />
                <span class="field-validation" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <div class="form-wrapper">
                    <label class="label" asp-for="FirstName">First Name</label>
                    <input type="text" asp-for="FirstName" />
                    <span class="field-validation" asp-validation-for="FirstName"></span>
                </div>
                <div class="form-wrapper">
                    <label class="label" asp-for="Surname">Surname</label>
                    <input type="text" asp-for="Surname"/>
                    <span class="field-validation" asp-validation-for="Surname"></span>
                </div>
            </div>
            <div class="form-wrapper">
                <label class="label" asp-for="Email">Email</label>
                <input type="text" asp-for="Email"/>
                <span class="field-validation" asp-validation-for="Email"></span>
            </div>
            <div class="form-wrapper">
                <input type="submit" value="Register" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>
<div class="white-left-back"></div>
<div class="white-right-back"></div>